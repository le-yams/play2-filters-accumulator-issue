# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /action1                           controllers.HomeController.action1
POST    /action1                           controllers.HomeController.action1
PUT     /action1                           controllers.HomeController.action1

GET     /action2                           controllers.HomeController.action2
POST    /action2                           controllers.HomeController.action2
PUT     /action2                           controllers.HomeController.action2

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
